<Window x:Class="PZ1_Nemanja_Malinovic.ChangeTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PZ1_Nemanja_Malinovic"
        mc:Ignorable="d"
        Title="ChangePolygonWindow" Height="300" Width="450"
        Background="{DynamicResource BlueGradient}">
    <Window.Resources>
        <LinearGradientBrush x:Key="BlueGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#CCCCCC" Offset="0"/>
            <GradientStop Color="#FF007AFF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid>
        <Label x:Name="label_Size" Content="Text size:" HorizontalAlignment="Left" Margin="19,23,0,0" VerticalAlignment="Top" Height="33" Width="119" RenderTransformOrigin="0.492,0.518"/>
        <TextBox x:Name="tb_Size" HorizontalAlignment="Left" Height="33" Margin="138,23,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="117"/>
        <Button x:Name="button_PolygonColor" Content="Select Text color" HorizontalAlignment="Left" Margin="138,96,0,0" VerticalAlignment="Top" Width="117" Height="35" Click="Button_Click"/>
        <Button x:Name="button_ChangePolygon" Content="Change Text" HorizontalAlignment="Left" Margin="80,175,0,0" VerticalAlignment="Top" Width="284" Height="47" Click="button_ChangeText_Click"/>

    </Grid>
</Window>